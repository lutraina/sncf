{% extends 'base.html.twig' %}

{% block body %}
    <h1>Demande</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ demande.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ demande.number }}</td>
            </tr>
            <tr>
